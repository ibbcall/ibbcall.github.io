{
  "title": "ccblog",
  "author": "ibbcall",
  "language" : "zh-hans",
  "structure": {
    "glossary": "GLOSSARY.md"
  },
  "plugins": [
    "addcssjs",
    "richquotes",
    "-lunr",
    "-search",
    "search-pro",
    "-sharing",
    "disqus",
    "editlink",
    "highlight",
    "bibtex-indexed-cite",
    "anchor-navigation-ex",
    "page-footer-ex",
    "splitter",
    "todo",
    "alerts",
    "include-csv",
    "copy-code-button",
    "simple-page-toc",
    "uml",
    "revealjs",
    "favicon",
    "multipart"
  ],
  "pluginsConfig": {
    "theme-default": {
      "showLevel": false
    },
    "addcssjs": {
      "js": [
      ],
      "css": [
      ]
    },
    "search-pro": {
      "cutWordLib": "nodejieba",
      "defineWord" : ["Gitbook Use"]
    },
    "anchor-navigation-ex": {
      "showLevel": false
    },
    "disqus": {
      "shortName": "ibbcall-ccblog"
    },
    "editlink": {
      "base": "https://github.com/ibbcall/ccblog/edit/master",
      "label": "Edit",
      "multilingual": false
    },
    "page-footer-ex": {
      "copyright": "written by ibbcall. 许可协议(licence)：署名-非商业性使用-禁止演绎 4.0(CC BY-NC-ND 4.0)<br><a rel=\"license\" href=\"http://creativecommons.org/licenses/by-nc-nd/4.0/\"><img alt=\"Creative Commons License\" style=\"border-width:0\" src=\"https://i.creativecommons.org/l/by-nc-nd/4.0/88x31.png\" /></a>",
      "markdown": true,
      "update_label": "updated in:",
      "update_format": "YYYY-MM-DD HH:mm:ss"
    },
    "bibtex-indexed-cite": {
      "path": "/"
    },
    "simple-page-toc": {
        "maxDepth": 3,
        "skipFirstH1": true
    },
    "uml": {
      "format": "svg",
      "nailgun": false
    },
    "favicon": {
      "shortcut": "/assets/images/cc-icon.ico",
      "bookmark": "/assets/images/cc-icon.ico",
      "appleTouch": "assets/images/cc-icon.png",
      "appleTouchMore": {
          "120x120": "assets/images/cc-icon.png",
          "180x180": "assets/images/cc-icon.png"
      }
    }
  },
  "ignores": ["Scripts", "styles", "node_modules", "assets"]
}
